<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#cce2e2e2"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/no_inet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/no_inet"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/no_feed"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/no_feed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/no_feed"
        android:visibility="gone" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swp_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.widget.NestedScrollView
                    android:id="@+id/scrollViewNested"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <View
                            android:id="@+id/marger"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:layout_marginBottom="30dp" />

                        <com.google.android.gms.ads.AdView
                            xmlns:ads="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/adView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            ads:adSize="SMART_BANNER"
                            ads:adUnitId="@string/AD_BANNER_ID">
                        </com.google.android.gms.ads.AdView>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rview_layout"
                            android:layout_marginTop="40dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/marger">

                        </android.support.v7.widget.RecyclerView>
                        <com.google.android.gms.ads.AdView
                            xmlns:ads="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/adView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            ads:adSize="SMART_BANNER"
                            ads:adUnitId="@string/AD_BANNER_ID">
                        </com.google.android.gms.ads.AdView>

                    </LinearLayout>
                </android.support.v4.widget.NestedScrollView>

                <LinearLayout
                    android:id="@+id/csbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="15dp"
                        android:clipToPadding="false"
                        app:cardBackgroundColor="@android:color/white"
                        app:cardCornerRadius="3dp"
                        app:cardElevation="3dp"
                        app:cardUseCompatPadding="false"
                        app:layout_collapseMode="parallax">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/btn_advance_search"
                                android:layout_width="?attr/actionBarSize"
                                android:layout_height="?attr/actionBarSize"
                                android:layout_alignParentRight="true"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                app:srcCompat="@drawable/ic_search_black_24dp"
                                tools:ignore="VectorDrawableCompat" />

                            <EditText
                                android:id="@+id/edt_search"
                                android:layout_width="match_parent"
                                android:layout_height="?attr/actionBarSize"
                                android:layout_toLeftOf="@id/btn_advance_search"
                                android:background="@drawable/bg_trans"
                                android:gravity="center_vertical"
                                android:hint="Search"
                                android:imeOptions="actionSearch"
                                android:paddingHorizontal="10dp"
                                android:singleLine="true" />

                            <RelativeLayout
                                android:id="@+id/layout_advance_search"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/edt_search"
                                android:padding="5dp"
                                android:visibility="gone">

                                <RadioGroup
                                    android:id="@+id/rg_search"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/rb_recipe"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/recipe" />

                                    <RadioButton
                                        android:id="@+id/rb_ing"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="100dp"
                                        android:text="@string/ingredients" />
                                </RadioGroup>
                            </RelativeLayout>

                        </RelativeLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/pbar"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height= "wrap_content"/>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>